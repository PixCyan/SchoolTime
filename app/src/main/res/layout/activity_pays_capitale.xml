<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="fr.pixcyan.android.raffennn.PaysCapitaleActivity">

    <Button
            android:text="Aide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="aide"
            android:id="@+id/boutonAide"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

    <TextView
            android:text="Quelle est la capitale de ce pays"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text1"
            android:textSize="25dp"/>

    <TextView
            android:text="Pays :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pays"
            android:textSize="25dp"
            android:layout_alignBottom="@+id/capitale"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/capitale"
            android:inputType="text"
            android:layout_marginTop="114dp"
            android:layout_below="@+id/text1"
            android:layout_toRightOf="@+id/pays"
            android:layout_toEndOf="@+id/pays"
            android:width="150dp"/>

    <TextView
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/correction"
            android:textSize="20dp"
            android:layout_centerVertical="true"
            android:layout_alignLeft="@+id/butouMenu"
            android:layout_alignStart="@+id/butouMenu"/>

    <Button
            android:text="Valider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="valider"
            android:layout_marginTop="31dp"
            android:layout_below="@+id/correction"
            android:layout_toRightOf="@+id/pays"
            android:layout_toEndOf="@+id/pays"
            android:id="@+id/button3"/>
    <Button
            android:text="Suivante =>"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="changerQuestion"
            android:id="@+id/suivant"
            android:layout_alignTop="@+id/button3"
            android:layout_toRightOf="@+id/button3"
            android:layout_toEndOf="@+id/button3"/>

    <Button
            android:text="Quitter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="quitter"
            android:id="@+id/boutonQuitter"
            android:layout_alignTop="@+id/butouMenu"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>

    <Button
            android:text="Menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="retourMenu"
            android:id="@+id/butouMenu"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"/>

</RelativeLayout>
