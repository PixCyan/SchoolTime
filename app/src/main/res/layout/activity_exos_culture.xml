<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="fr.pixcyan.android.raffennn.ExosCultureActivity"
                android:clickable="false">

    <TextView
        android:text="Quelle questionnaire souhaite-tu lancer ?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text"
        android:textSize="20dp"
        android:textColor="#ff000000"/>

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Qart"
            android:onClick="questionArt"
            android:layout_marginTop="134dp"
            android:background="@drawable/palette"
            android:layout_below="@+id/text"
            android:layout_toLeftOf="@+id/butouMenu"
            android:layout_toStartOf="@+id/butouMenu"
            android:clickable="true"/>
    <TextView
            android:text="Art"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textArt"
            android:layout_below="@+id/Qart"
            android:layout_alignLeft="@+id/Qart"
            android:layout_alignStart="@+id/Qart"
            android:layout_marginLeft="42dp"
            android:layout_marginStart="42dp"
            android:textColor="#ff000000"/>

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Qcapitale"
            android:onClick="capitale"
            android:background="@drawable/avion"
            android:layout_alignTop="@+id/Qart"
            android:layout_toRightOf="@+id/butouMenu"
            android:layout_toEndOf="@+id/butouMenu"
            android:clickable="true"/>

    <TextView
            android:text="Capitales"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textCapitales"
            android:layout_below="@+id/Qcapitale"
            android:layout_alignLeft="@+id/boutonQuitter"
            android:layout_alignStart="@+id/boutonQuitter"
            android:textColor="#ff000000"/>

    <Button
            android:text="Quitter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="quitter"
            android:id="@+id/boutonQuitter"
            android:layout_alignTop="@+id/butouMenu"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:background="#ff3e57a3"/>

    <Button
            android:text="Menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="retourMenu"
            android:id="@+id/butouMenu"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="#ff3e57a3"/>


</RelativeLayout>
