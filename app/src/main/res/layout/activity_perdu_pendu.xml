<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="fr.pixcyan.android.raffennn.PerduPenduActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Vous avez perdu, dommage !"
        android:layout_marginTop="139dp"
        android:textSize="40dp"
        android:textStyle="bold"
        android:id="@+id/textView5"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Rejouer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="rejouer"
        android:id="@+id/butonRejouer"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="47dp" />

    <Button
        android:text="Quitter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="quitter"
        android:id="@+id/boutonQuitter"
        android:layout_alignTop="@+id/butouMenu"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <Button
        android:text="Menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="retourMenu"
        android:id="@+id/butouMenu"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/butonRejouer"
        android:layout_alignStart="@+id/butonRejouer" />

</RelativeLayout>
